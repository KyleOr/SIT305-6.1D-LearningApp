<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flexbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/interestsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Interests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/interestsSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You may select up to 10 topics"
        android:textSize="14sp"
        android:textColor="#888888"
        android:layout_marginBottom="16dp" />

    <!-- Topic container -->
    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/topicsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        flexbox:alignItems="flex_start"
        flexbox:flexWrap="wrap"
        flexbox:justifyContent="flex_start" />

    <!-- Next button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginTop="16dp" />
</LinearLayout>
